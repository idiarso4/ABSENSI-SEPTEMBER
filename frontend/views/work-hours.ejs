<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelola Jam Kerja - Sistem HRM & Payroll</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <!-- Work Hours Statistics -->
        <div class="row mb-4" id="workHoursStats">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Shift</h5>
                        <h2 id="totalShifts">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Jam Kerja Standard</h5>
                        <h2 id="standardHours">8</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Lembur Bulan Ini</h5>
                        <h2 id="monthlyOvertime">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Tingkat Kepatuhan</h5>
                        <h2 id="complianceRate">-</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-clock-history"></i> Manajemen Jam Kerja</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#shiftModal">
                <i class="bi bi-plus-circle"></i> Buat Shift Baru
            </button>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="workHoursTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="shifts-tab" data-bs-toggle="tab" data-bs-target="#shifts" type="button" role="tab">
                    <i class="bi bi-calendar3"></i> Daftar Shift
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="work-calendar-tab" data-bs-toggle="tab" data-bs-target="#work-calendar" type="button" role="tab">
                    <i class="bi bi-calendar-week"></i> Kalender Kerja
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="overtime-tab" data-bs-toggle="tab" data-bs-target="#overtime" type="button" role="tab">
                    <i class="bi bi-stopwatch"></i> Lembur
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">
                    <i class="bi bi-gear"></i> Konfigurasi
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="workHoursTabContent">
            <!-- Shifts Tab -->
            <div class="tab-pane fade show active" id="shifts" role="tabpanel">
                <div class="card mt-4">
                    <div class="card-header">
                        <h5>Konfigurasi Shift Kerja</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nama Shift</th>
                                        <th>Jam Masuk</th>
                                        <th>Jam Keluar</th>
                                        <th>Durasi Istirahat</th>
                                        <th>Total Jam</th>
                                        <th>Karyawan</th>
                                        <th>Status</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody id="shiftsTableBody">
                                    <!-- Shift data will be loaded here -->
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            <div class="spinner-border" role="status">
                                                <span class="visually-hidden">Memuat...</span>
                                            </div>
                                            Memuat data shift...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Work Calendar Tab -->
            <div class="tab-pane fade" id="work-calendar" role="tabpanel">
                <div class="card mt-4">
                    <div class="card-header">
                        <h5>Kalender Kerja & Absenteeisme</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <select class="form-select" id="calendarMonth">
                                    <option value="0">Januari</option>
                                    <option value="1">Februari</option>
                                    <option value="2">Maret</option>
                                    <option value="3">April</option>
                                    <option value="4">Mei</option>
                                    <option value="5">Juni</option>
                                    <option value="6">Juli</option>
                                    <option value="7">Agustus</option>
                                    <option value="8">September</option>
                                    <option value="9">Oktober</option>
                                    <option value="10">November</option>
                                    <option value="11">Desember</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select" id="calendarYear">
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary" id="loadCalendarBtn">
                                    <i class="bi bi-calendar3"></i> Muat Kalender
                                </button>
                            </div>
                        </div>

                        <div id="calendarContainer" class="row">
                            <!-- Calendar will be generated here -->
                            <div class="col-12">
                                <div class="alert alert-info">
                                    Pilih bulan dan tahun untuk melihat kalender kerja
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Overtime Tab -->
            <div class="tab-pane fade" id="overtime" role="tabpanel">
                <div class="card mt-4">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5>Pengajuan Lembur</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#overtimeModal">
                                    <i class="bi bi-plus-circle"></i> Ajukan Lembur
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Karyawan</th>
                                        <th>Tanggal</th>
                                        <th>Jam Mulai</th>
                                        <th>Jam Selesai</th>
                                        <th>Total Jam</th>
                                        <th>Tugas</th>
                                        <th>Status</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody id="overtimeTableBody">
                                    <!-- Overtime data will be loaded here -->
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">
                                            Belum ada pengajuan lembur
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings Tab -->
            <div class="tab-pane fade" id="settings" role="tabpanel">
                <div class="card mt-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Konfigurasi Jam Kerja Default</h5>
                                <form id="workSettingsForm">
                                    <div class="mb-3">
                                        <label for="defaultStartTime" class="form-label">Jam Masuk Default</label>
                                        <input type="time" class="form-control" id="defaultStartTime" value="08:00">
                                    </div>
                                    <div class="mb-3">
                                        <label for="defaultEndTime" class="form-label">Jam Keluar Default</label>
                                        <input type="time" class="form-control" id="defaultEndTime" value="17:00">
                                    </div>
                                    <div class="mb-3">
                                        <label for="breakDuration" class="form-label">Durasi Istirahat (Menit)</label>
                                        <input type="number" class="form-control" id="breakDuration" value="60" min="0">
                                    </div>
                                    <div class="mb-3">
                                        <label for="overtimeRate" class="form-label">Rate Lembur (/jam)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">Rp</span>
                                            <input type="number" class="form-control" id="overtimeRate" value="15000" min="0">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Simpan Konfigurasi</button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <h5>Kebijakan Waktu Kerja</h5>
                                <div class="list-group">
                                    <div class="list-group-item">
                                        <h6 class="mb-1">Maximum Jam Kerja Mingguan</h6>
                                        <p class="mb-1">40 jam per minggu</p>
                                    </div>
                                    <div class="list-group-item">
                                        <h6 class="mb-1">Grace Period Kedatangan</h6>
                                        <p class="mb-1">15 menit toleransi</p>
                                    </div>
                                    <div class="list-group-item">
                                        <h6 class="mb-1">Lembur Minimum</h6>
                                        <p class="mb-1">1 jam per hari</p>
                                    </div>
                                    <div class="list-group-item">
                                        <h6 class="mb-1">Hari Libur Nasional</h6>
                                        <p class="mb-1">Otomatis ditandai</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Shift Modal -->
    <div class="modal fade" id="shiftModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Buat Shift Baru</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" for="shiftName">Nama Shift</label>
                        <input type="text" id="shiftName" class="form-control" placeholder="Contoh: Shift Pagi" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="shiftStartTime">Jam Masuk</label>
                            <input type="time" id="shiftStartTime" class="form-control" value="08:00" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="shiftEndTime">Jam Keluar</label>
                            <input type="time" id="shiftEndTime" class="form-control" value="17:00" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="shiftBreak">Durasi Istirahat (menit)</label>
                        <input type="number" id="shiftBreak" class="form-control" value="60" min="0" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" id="saveShiftBtn" class="btn btn-primary">Simpan</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Overtime Modal (stub) -->
    <div class="modal fade" id="overtimeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajukan Lembur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3" id="overtimeEmployeeGroup">
                        <label class="form-label" for="overtimeEmployee">Karyawan</label>
                        <select id="overtimeEmployee" class="form-select">
                            <option value="">Pilih karyawan</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="overtimeDate">Tanggal</label>
                            <input type="date" id="overtimeDate" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label" for="overtimeStartTime">Mulai</label>
                            <input type="time" id="overtimeStartTime" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label" for="overtimeEndTime">Selesai</label>
                            <input type="time" id="overtimeEndTime" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="overtimeTask">Deskripsi Tugas</label>
                        <textarea id="overtimeTask" class="form-control" rows="3" placeholder="Apa yang dikerjakan saat lembur?"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    <button type="button" id="submitOvertimeBtn" class="btn btn-success">Ajukan</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/work-hours.js"></script>
</body>
</html>
