<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Tugas - Sistem HRM & Payroll</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <!-- Task Statistics -->
        <div class="row mb-4" id="taskStats">
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Tugas</h5>
                        <h2 id="totalTasks">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Sedang Berjalan</h5>
                        <h2 id="inProgressTasks">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Selesai</h5>
                        <h2 id="completedTasks">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Terlambat</h5>
                        <h2 id="overdueTasks">-</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-list-task"></i> Manajemen Tugas</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#taskModal">
                <i class="bi bi-plus-circle"></i> Tambah Tugas
            </button>
        </div>

        <!-- Filters -->
        <div class="row mb-3">
            <div class="col-md-3">
                <select class="form-select" id="statusFilter">
                    <option value="">Semua Status</option>
                    <option value="TODO">Belum Dimulai</option>
                    <option value="IN_PROGRESS">Sedang Berjalan</option>
                    <option value="COMPLETED">Selesai</option>
                    <option value="OVERDUE">Terlambat</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="priorityFilter">
                    <option value="">Semua Prioritas</option>
                    <option value="LOW">Rendah</option>
                    <option value="MEDIUM">Sedang</option>
                    <option value="HIGH">Tinggi</option>
                    <option value="URGENT">Mendesak</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" id="dueDateFilter" placeholder="Filter Tanggal Target">
            </div>
            <div class="col-md-3">
                <button class="btn btn-secondary" id="filterBtn" style="margin-right: 5px;">
                    <i class="bi bi-filter"></i> Filter
                </button>
                <button class="btn btn-outline-secondary" id="clearFiltersBtn">
                    <i class="bi bi-x-circle"></i> Hapus Filter
                </button>
            </div>
        </div>

        <!-- Tasks Table -->
        <div class="card">
            <div class="card-header">
                <h5>Daftar Tugas</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nama Tugas</th>
                                <th>Penanggung Jawab</th>
                                <th>Prioritas</th>
                                <th>Status</th>
                                <th>Tanggal Target</th>
                                <th>Progress</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody id="tasksTableBody">
                            <!-- Tasks data will be loaded here -->
                            <tr>
                                <td colspan="8" class="text-center">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Memuat...</span>
                                    </div>
                                    Memuat data tugas...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Task Modal -->
    <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="taskModalLabel">Tambah Tugas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>
                <div class="modal-body">
                    <form id="taskForm">
                        <input type="hidden" id="taskId">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="taskName" class="form-label">Nama Tugas *</label>
                                    <input type="text" class="form-control" id="taskName" required
                                           placeholder="Masukkan nama tugas lengkap">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="taskPriority" class="form-label">Prioritas *</label>
                                    <select class="form-select" id="taskPriority" required>
                                        <option value="LOW">Rendah</option>
                                        <option value="MEDIUM">Sedang</option>
                                        <option value="HIGH">Tinggi</option>
                                        <option value="URGENT">Mendesak</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="assignedTo" class="form-label">Penanggung Jawab *</label>
                                    <select class="form-select" id="assignedTo" required>
                                        <option value="">Pilih Karyawan</option>
                                        <!-- Employees will be loaded here -->
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="dueDate" class="form-label">Tanggal Target</label>
                                    <input type="date" class="form-control" id="dueDate">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="startDate" class="form-label">Tanggal Mulai</label>
                                    <input type="date" class="form-control" id="startDate">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="completionDate" class="form-label">Tanggal Selesai</label>
                                    <input type="date" class="form-control" id="completionDate" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="taskDescription" class="form-label">Deskripsi Tugas</label>
                            <textarea class="form-control" id="taskDescription" rows="4"
                                      placeholder="Masukkan deskripsi tugas dan instruksi lebih lanjut..."></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="progress" class="form-label">Progress (%)</label>
                                    <input type="number" class="form-control" id="progress" min="0" max="100" value="0">
                                </div>
                                <div class="col-md-8">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" id="taskStatus">
                                        <option value="TODO">Belum Dimulai</option>
                                        <option value="IN_PROGRESS">Sedang Berjalan</option>
                                        <option value="COMPLETED">Selesai</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle-fill"></i>
                            Progress akan otomatis diperbarui berdasarkan status tugas, atau dapat diatur manual.
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary" id="saveTaskBtn">Simpan Tugas</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Task Details Modal -->
    <div class="modal fade" id="taskDetailsModal" tabindex="-1" aria-labelledby="taskDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="taskDetailsModalLabel">Detail Tugas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h6>Informasi Tugas</h6>
                                </div>
                                <div class="card-body">
                                    <h5 id="detailsTitle">-</h5>
                                    <p><strong>Penanggung Jawab:</strong> <span id="detailsAssignee">-</span></p>
                                    <p><strong>Prioritas:</strong> <span id="detailsPriority">-</span></p>
                                    <p><strong>Status:</strong> <span id="detailsStatus">-</span></p>
                                    <p><strong>Tanggal Mulai:</strong> <span id="detailsStartDate">-</span></p>
                                    <p><strong>Tanggal Target:</strong> <span id="detailsDueDate">-</span></p>
                                    <p><strong>Progress:</strong> <span id="detailsProgress">-</span></p>
                                    <div class="mt-3">
                                        <strong>Deskripsi:</strong>
                                        <p id="detailsDescription" class="mt-2">-</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6>Progress & Waktu</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Update Progress</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="updateProgress" min="0" max="100">
                                            <span class="input-group-text">%</span>
                                            <button class="btn btn-outline-primary" type="button" id="updateProgressBtn">Update</button>
                                        </div>
                                    </div>
                                    <div class="progress mt-3">
                                        <div class="progress-bar" id="progressBar" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small class="text-muted mt-2 d-block" id="timeRemaining">-</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/tasks.js"></script>
</body>
</html>
